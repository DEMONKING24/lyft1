# engine/model/calliope.py

class Calliope:
    def __init__(self, last_service_date, current_mileage, last_service_mileage, tire_tread_depth):
        self.last_service_date = last_service_date
        self.current_mileage = current_mileage
        self.last_service_mileage = last_service_mileage
        self.tire_tread_depth = tire_tread_depth

    def needs_service(self):
        return self.is_battery_low() or self.is_engine_overdue() or self.is_tire_worn()

    # Other methods remain the same.

